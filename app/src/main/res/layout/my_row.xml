<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/view_acitvity"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardCornerRadius="30dp"
android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardBackgroundColor="@color/my_row"
        app:cardElevation="10dp"
        >
        <!--8-->
        <RelativeLayout
            android:layout_width="390dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="name"
                android:textStyle="bold"
                android:id="@+id/namet"
                android:layout_marginLeft="15dp"
                android:textSize="25dp"
                android:textColor="@color/name"
                />
            <ImageView
                android:id="@+id/circle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_toRightOf="@+id/iv"
                android:src="@drawable/circle"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                />

            <ImageView
                android:id="@+id/iv"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_below="@+id/namet"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                />
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rankt"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="9dp"
                android:id="@+id/table">

                <TableRow>

                    <TextView
                        android:text="Level1                    "
                        android:padding="2dip"
                        android:background="@drawable/cell_border"
                        android:textStyle="bold"
                        android:textColor="@color/borders"
                        />

                    <TextView
                        android:text="   10   "
                        android:padding="2dip"
                        android:background="@drawable/cell_border"
                        android:textStyle="bold"
                        android:textColor="@color/level3"
                        android:textAlignment="center"
                        android:id="@+id/l1"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Level2"
                        android:padding="2dip"
                        android:background="@drawable/cell_border"
                        android:textStyle="bold"
                        android:textColor="@color/borders"/>

                    <TextView
                        android:text="10"
                        android:padding="2dip"
                        android:layout_width="40dp"
                        android:background="@drawable/cell_border"
                        android:textStyle="bold"
                        android:textColor="@color/level3"
                        android:textAlignment="center"
                        android:id="@+id/l2"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Level3"
                        android:padding="2dip"
                        android:background="@drawable/cell_border"
                        android:textStyle="bold"
                        android:textColor="@color/borders"/>

                    <TextView
                        android:text="10"
                        android:padding="2dip"
                        android:layout_width="40dp"
                        android:background="@drawable/cell_border"
                        android:textStyle="bold"
                        android:textColor="@color/level3"
                        android:textAlignment="center"
                        android:id="@+id/l3"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Level4"
                        android:padding="2dip"
                        android:background="@drawable/cell_border"
                        android:textStyle="bold"
                        android:textColor="@color/borders"/>

                    <TextView
                        android:text="10"
                        android:padding="2dip"
                        android:layout_width="40dp"
                        android:background="@drawable/cell_border"
                        android:textStyle="bold"
                        android:textColor="@color/level3"
                        android:textAlignment="center"
                        android:id="@+id/l4"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Level5"
                        android:padding="2dip"
                        android:background="@drawable/cell_border"
                        android:textStyle="bold"
                        android:textColor="@color/borders"/>

                    <TextView
                        android:text="10"
                        android:padding="2dip"
                        android:layout_width="50dp"
                        android:background="@drawable/cell_border"
                        android:textStyle="bold"
                        android:textColor="@color/level3"
                        android:textAlignment="center"
                        android:id="@+id/l5"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="OVERALL"
                        android:padding="2dip"
                        android:textSize="18dp"
                        android:background="@drawable/cell_border"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"/>

                    <TextView
                        android:text="50"
                        android:padding="2dip"
                        android:textSize="18dp"
                        android:layout_width="40dp"
                        android:background="@drawable/cell_border"
                        android:textStyle="bold"
                        android:textColor="@color/level5"
                        android:textAlignment="center"
                        android:id="@+id/lo" />

                </TableRow>
            </TableLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv"
                android:text="20"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:textColor="@color/my_row"
                android:id="@+id/rankt"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>