<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:id="@+id/login"
    android:background="@drawable/login">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfun"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Username"
        app:boxStrokeWidth="0dp"
        android:layout_marginTop="300dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:drawableLeft="@drawable/icon_user"
            android:drawablePadding="10dp"
            android:id="@+id/eun"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:maxLines="1"
            android:inputType="textNoSuggestions"
            android:background="@drawable/custom_border"
            android:imeOptions="actionNext"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfp"
        android:layout_below="@+id/tfun"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        app:boxStrokeWidth="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="10dp"
            android:id="@+id/ep"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_border"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tfp"
        android:id="@+id/bl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="login"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:backgroundTint="@color/borders"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bl"
        android:id="@+id/tn"
        android:text="Not have account ?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tn"
        android:id="@+id/ts"
        android:text="SignUp here"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ts"
        android:id="@+id/tf"
        android:text="Forgot password ?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="320dp"
        android:layout_height="490dp"
        app:cardBackgroundColor="@color/bg_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp"
        android:id="@+id/card"
        android:visibility="invisible"
        app:strokeWidth="5dp"
        app:strokeColor="@color/level1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:id="@+id/ti"
                android:text="To retrieve your password, please enter your username and date of birth below. Your password will be displayed on the screen once you submit the information."/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tfun2"
                android:layout_below="@+id/ti"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="Username"
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="#6A1B9A"
                app:boxStrokeWidth="1dp"
                android:layout_marginTop="40dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eun2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:background="@drawable/custom_border"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tfb2"
                android:layout_below="@+id/tfun2"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:hint="Birthday"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                app:boxStrokeColor="#6A1B9A"
                app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eb2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_border"/>


            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tfb2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:width="120dp"
                android:text="submit"
                android:textColor="@color/bg_card"
                android:backgroundTint="@color/borders"
                android:id="@+id/bs"/>
               <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/bs"
                android:text="Your password will be displayed right here !"
                android:id="@+id/tp"
                android:textColor="@color/purple_700"
                android:textSize="20dp"
                android:visibility="visible"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:width="80dp"
                android:text="next"
                android:textColor="@color/bg_card"
                android:background="@drawable/next_button"
                android:id="@+id/bn"
                android:enabled="false"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pre"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/pre"
                android:backgroundTint="@color/level2"
                app:rippleColor="@color/white"
                app:maxImageSize="30dp"
                android:visibility="visible"
                />






        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>





</RelativeLayout>